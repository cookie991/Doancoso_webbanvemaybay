<img src="~/Content/image/209501.jpg" alt="" id="backgroud">
<!------------------------------- <main> ------------------------------->
<div id="main">
    <div class="main-heading">
        <b>Vé máy bay giá rẻ</b><br>
        <p>Bay đẳng cấp, giá cực thấp</p>
    </div>
    @*@using (Html.BeginForm("SearchFlight", "Flight", FormMethod.Post))*@
<div class="tic">
    <div class="tic-heading">
        <p>Vé máy bay</p>
        <div class="ticket-type">
            <input type="radio" name="ticket-type" id="one-way" checked><label for="one-way"> Một chiều</label>
            <input type="radio" name="ticket-type" id="round-trip"><label for="round-trip"> Khứ hồi</label>
            @*
                <input type="radio" name="searchBy" id="priceSort" value="priceSort" checked><label for="priceSort"> Giảm dần</label>
                <input type="radio" name="searchBy" id="priceSort1" value="priceSort1">
                <label for="priceSort1"> Tăng dần</label>*@
        </div>
    </div>
    <div class="tic-content">
        <div class="deprture js-open-location">
            <i class="fa-sharp fa-solid fa-plane-departure"></i>
            @Html.TextBox("to", null, new { @class = "form-control in-location", @Value = "Hà Nội (HAN)" })
            @*<input class="in-location" type="text" name="to" id="to" value="Hà Nội (HAN)">*@

        </div>
        <div class="destination js-open-location-2">
            <i class="fa-solid fa-plane-arrival"></i>
            @Html.TextBox("from", null, new { @class = "form-control in-location", @Value = "Hồ Chí Minh (HCM)" })
            @*<input class="in-location" type="text" name="from" id="from" value="Hà Nội (HAN)">*@
        </div>
        <input class="in-date" type="date" name="departure_day" id="departure_day" title="Chọn ngày đi">
        <input class="in-date" type="date" name="round-trip_day" id="round-trip_day" title="Chọn ngày về" disabled style="opacity: 0.3; cursor: no-drop;">

        <div class="number-p">
            <button class="btn-number-p">
                <i class="fa-solid fa-user"></i>
                <span>1</span>
            </button>
            <div class="p-table">
                <div class="p-item">
                    <div class="p-item-left">
                        <p>Người lớn</p>
                        <span>(Trên 18)</span>
                    </div>
                    <div class="p-item-right">
                        <button class="btn-p">+</button>
                        <label style="padding: 0 3px;" for="btn-p">1</label>
                        <button class="btn-p">-</button>
                    </div>
                </div>
                <div class="p-item">
                    <div class="p-item-left">
                        <p>Trẻ em</p>
                        <span>(2 - 12)</span>
                    </div>
                    <div class="p-item-right">
                        <button class="btn-p">+</button>
                        <label style="padding: 0 3px;" for="btn-p">0</label>
                        <button class="btn-p">-</button>
                    </div>
                </div>
                <div class="p-item">
                    <div class="p-item-left">
                        <p>Em bé</p>
                        <span>(0 - 2)</span>
                    </div>
                    <div class="p-item-right">
                        <button class="btn-p">+</button>
                        <label style="padding: 0 3px;" for="btn-p">0</label>
                        <button class="btn-p">-</button>
                    </div>
                </div>
            </div>
        </div>
        <button class="btn-find-tic">Tìm chuyến bay</button>
    </div>
</div>
